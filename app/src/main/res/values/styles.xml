<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button">
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Negative">
        <item name="android:background">@drawable/stroke_white</item>
    </style>

    <style name="Input">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColorHint">#808080</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="Info"></style>

    <style name="Info.Label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#aaa</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Info.Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Info.Group">
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>