<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#1C1C1E"
        android:padding="6dp">

        <ImageView
            android:id="@+id/nft_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            />

        <!-- Description Section -->
        <TextView
            android:id="@+id/description_label"
            android:layout_below="@id/nft_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#8E8E93"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_label"
            android:layout_marginTop="4dp"
            android:text="Random Drop event! https://3000wif.com"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/description_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_text"
            android:text="https://3000wif.com"
            android:textColor="#005CFF"
            android:textSize="12dp" />

        <!-- Info Section -->
        <RelativeLayout
            android:id="@+id/info_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_link"
            android:layout_marginTop="16dp"
            android:background="#2C2C2E"
            android:padding="4dp">

            <TextView
                android:id="@+id/label_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collection"
                android:textColor="#8E8E93"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/value_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="WIF Drop"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/label_floor_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_collect"
                android:layout_marginTop="8dp"
                android:text="Floor Price"
                android:textColor="#8E8E93"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/value_floor_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/value_collect"
                android:layout_marginTop="8dp"
                android:text="0.00011 SOL"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/label_owners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_floor_price"
                android:layout_marginTop="8dp"
                android:text="Unique Owners"
                android:textColor="#8E8E93"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/value_owners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/value_floor_price"
                android:layout_marginTop="8dp"
                android:text="269,526"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/label_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_owners"
                android:layout_marginTop="8dp"
                android:text="Network"
                android:textColor="#8E8E93"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/value_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/value_owners"
                android:layout_marginTop="8dp"
                android:text="Solana"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />
        </RelativeLayout>

        <!-- Attributes Section -->
        <TextView
            android:id="@+id/attributes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_section"
            android:layout_marginTop="16dp"
            android:text="Attributes"
            android:textColor="#8E8E93"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/attributes_section"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/attributes_label"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/attribute_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="#2C2C2E"
                android:padding="4dp"
                android:text="WEBSITE\nhttps://3000wif.com"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/attribute_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/attribute_website"
                android:layout_marginEnd="8dp"
                android:background="#2C2C2E"
                android:padding="4dp"
                android:text="VERIFIED\nTrue"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/attribute_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/attribute_website"
                android:layout_marginTop="8dp"
                android:background="#2C2C2E"
                android:padding="4dp"
                android:text="AMOUNT\n3,000+ WIF"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/attribute_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/attribute_verified"
                android:layout_toEndOf="@id/attribute_amount"
                android:layout_marginTop="8dp"
                android:background="#2C2C2E"
                android:padding="4dp"
                android:text="TIME LEFT\n25 minutes!"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
