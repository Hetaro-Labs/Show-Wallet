<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layout_buttons"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/paymentSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/global_padding">

                        <ImageView
                            android:id="@+id/paymentIcon"
                            android:layout_width="@dimen/token_icon_size"
                            android:layout_height="@dimen/token_icon_size"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/ic_running_app" />

                        <TextView
                            android:id="@+id/paymentLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@id/paymentIcon"
                            android:text="Confirm Transaction"
                            android:textColor="#B0B0B0"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/paymentAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/paymentLabel"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@id/paymentIcon"
                            android:text="Running Mate"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/paymentValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text=""
                            android:textColor="#B0B0B0"
                            android:textSize="@dimen/text_size_medium" />

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/exchangeSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/global_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The asset change is astimated."
                            android:textColor="@color/text_info"
                            android:textSize="@dimen/text_size_small" />

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:id="@+id/exchangeIcon"
                                android:layout_width="@dimen/small_icon_size"
                                android:layout_height="@dimen/small_icon_size"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/ic_solana" />

                            <TextView
                                android:id="@+id/exchangeLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_toEndOf="@id/exchangeIcon"
                                android:text="-0.01 SOL"
                                android:textColor="#B0B0B0"
                                android:textSize="@dimen/text_size_medium" />

                        </LinearLayout>


                        <!-- Info Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/info_background"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <LinearLayout style="@style/Info.Group">

                                <TextView
                                    style="@style/Info.Label"
                                    android:textColor="@color/white"
                                    android:text="Unknow program"
                                    />


                            </LinearLayout>

                            <LinearLayout style="@style/Info.Group">

                                <TextView
                                    style="@style/Info.Label"
                                    android:text="Program ID"
                                    />

                                <TextView
                                    style="@style/Info.Value"
                                    android:text="Memos....je8Hc"
                                    />

                            </LinearLayout>


                            <LinearLayout style="@style/Info.Group">

                                <TextView
                                    style="@style/Info.Label"
                                    android:text="Data"
                                    />

                                <TextView
                                    style="@style/Info.Value"
                                    android:text="HP3d923...YEB91bx"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                style="@style/Info.Group">

                                <TextView
                                    style="@style/Info.Label"
                                    android:text="@string/network"
                                    />

                                <TextView
                                    style="@style/Info.Value"
                                    android:text="Solana"
                                    />

                            </LinearLayout>

                        </LinearLayout>


                        <!-- Info Section -->
                        <LinearLayout
                            android:id="@+id/info_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/info_background"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <LinearLayout style="@style/Info.Group">

                                <TextView
                                    style="@style/Info.Label"
                                    android:textColor="@color/white"
                                    android:text="Transfer SOL"
                                    />


                            </LinearLayout>

                            <LinearLayout style="@style/Info.Group">

                                <TextView
                                    style="@style/Info.Label"
                                    android:text="To"
                                    />

                                <TextView
                                    android:id="@+id/value_collection"
                                    style="@style/Info.Value"
                                    android:text="Uxie....U839"
                                    />

                            </LinearLayout>


                            <LinearLayout style="@style/Info.Group">

                                <TextView
                                    style="@style/Info.Label"
                                    android:text="Amount"
                                    />

                                <TextView
                                    android:id="@+id/value_floor_price"
                                    style="@style/Info.Value"
                                    android:text="0.01 SOL"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                style="@style/Info.Group">

                                <TextView
                                    style="@style/Info.Label"
                                    android:text="@string/network"
                                    />

                                <TextView
                                    android:id="@+id/value_network"
                                    style="@style/Info.Value"
                                    android:text="Solana"
                                    />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="error: "
                    android:textColor="@color/error"
                    android:textSize="10dp"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/btn_cancel"
                style="@style/Button.Negative"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/cancel"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/btn_confirm"
                style="@style/Button"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/swap_button_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="confirm"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/swap_progress"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>