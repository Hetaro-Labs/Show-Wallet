<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/wallet_background"
        android:gravity="center"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_showtime"
            />

        <com.showtime.wallet.view.GradientTextView
            android:text="Welcome!"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:gravity="center"
            android:text="To showtime wallet"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/btn_create_wallet"
            android:layout_marginTop="12dp"
            android:text="Create Wallet"
            style="@style/Button" />

        <TextView
            android:id="@+id/btn_import"
            android:text="@string/import_private_key"
            style="@style/Info.Button" />

    </LinearLayout>
</layout>